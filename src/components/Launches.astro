---
import CardLaunch from './CardLaunch.astro';
import type { LaunchesResponse } from '../types/api';

const resp = await fetch('https://api.spacexdata.com/v5/launches/query', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: 'asc'
      },
      limit: 12
    }
  })
});
const { docs: launches } = await resp.json() as LaunchesResponse;

---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(launch =>
      <article>
        <CardLaunch
          id={launch.id}
          img={launch.links.patch.small}
          details={launch.details}
          flightNumber={launch.flight_number}
          success={launch.success}
          />
      </article>
    )
  }
</div>
